<UserControl x:Class="HistogramTransform.OperationBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HistogramTransform"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Aquamarine">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <ComboBox Margin="8">
                <ComboBoxItem>Operacja 1</ComboBoxItem>
                <ComboBoxItem>Operacja 2</ComboBoxItem>
                <ComboBoxItem>Operacja 3</ComboBoxItem>
            </ComboBox>
            <Label Margin="8" Content="Usuń" Background="White"></Label>
        </StackPanel>
    </Grid>
    
</UserControl>
